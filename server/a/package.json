{
  "name": "xpanel-vps-manager",
  "version": "1.0.0",
  "description": "Xpanel - VPS Management System with auto-installation and real-time monitoring",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start-both": "concurrently \"npm run dev\" \"npm run client\"",
    "postinstall": "cd client && npm install"
  },
  "keywords": [
    "vps",
    "server",
    "management",
    "ssh",
    "monitoring"
  ],
  "author": "Xpanel Team",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-ssh": "^13.1.0",
    "nodemailer": "^6.9.4",
    "recharts": "^3.1.2",
    "socket.io": "^4.7.2",
    "unzipper": "^0.10.14",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
